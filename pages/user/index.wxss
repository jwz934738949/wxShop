Page {
  background-color: #edece8;
}
.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translateX(-50%);
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  font-size: 35rpx;
  margin-top: 35rpx;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
  border: 1rpx solid greenyellow;
  color: greenyellow;
  border-radius: 10rpx;
  padding: 30rpx;
  font-size: 35rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  top: -50rpx;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  color: #666;
  padding-bottom: 50rpx;
}
.user_content .user_main .history_wrap {
  background-color: #fff;
  display: flex;
  padding: 15rpx 0;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .order_wrap {
  margin-top: 20rpx;
  background-color: #fff;
}
.user_content .user_main .order_wrap .order_title {
  font-size: 30rpx;
  padding: 25rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .order_wrap .order_content {
  display: flex;
  text-align: center;
  padding: 20rpx 0;
}
.user_content .user_main .order_wrap .order_content navigator {
  flex: 1;
}
.user_content .user_main .order_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  margin-bottom: 10rpx;
}
.user_content .user_main .address_wrap {
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 30rpx;
  padding: 25rpx;
}
.user_content .user_main .app_info_wrap {
  margin-top: 20rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 25rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_wrap .app_info_concat {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_wrap {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 25rpx;
  font-size: 30rpx;
}
